{
    "compilerOptions": {
      "outDir": "out",
      "module": "commonjs",
      "target": "es5",
      // "lib": ["es6", "dom", "es2016", "es2017","dom", "esnext"],
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "suppressImplicitAnyIndexErrors": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "out", "**/*.test.tsx", "**/*.test.ts"]
  }